{
    "name": "rust-webassembly-typescript",
    "version": "0.0.0",
    "description": "Template for rust-webassembly-typescript project",
    "scripts": {
        "build": "rimraf dist pkg && cross-env TS_NODE_PROJECT=\"config/tsconfig.json\" webpack --config config/webpack.prod.config.ts",
        "start": "cross-env TS_NODE_PROJECT=\"config/tsconfig.json\" webpack-dev-server --progress --config config/webpack.dev.config.ts",
        "test": "cargo test && wasm-pack test --headless",
        "build:pkg": "wasm-pack build --out-name index"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/asurance/rust-webassembly-typescript.git"
    },
    "author": "asurance",
    "bugs": {
        "url": "https://github.com/asurance/rust-webassembly-typescript/issues"
    },
    "homepage": "https://github.com/asurance/rust-webassembly-typescript#readme",
    "devDependencies": {
        "@types/friendly-errors-webpack-plugin": "^0.1.2",
        "@types/html-webpack-plugin": "^3.2.3",
        "@types/node": "^14.0.13",
        "@types/webpack": "^4.41.17",
        "@types/webpack-merge": "^4.1.5",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "@wasm-tool/wasm-pack-plugin": "^1.1.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.2.0",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "html-webpack-plugin": "^4.3.0",
        "rimraf": "^3.0.0",
        "ts-loader": "^7.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.3",
        "webpack-dev-server": "^3.7.1",
        "webpack-merge": "^4.2.2"
    }
}
